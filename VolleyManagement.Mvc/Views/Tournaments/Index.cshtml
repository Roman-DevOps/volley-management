@model IEnumerable<VolleyManagement.Domain.Tournaments.Tournament>

@{
    ViewBag.Title = VolleyManagement.Mvc.Views.ViewResources.TournamentsIndexTitle;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(VolleyManagement.Mvc.Views.ViewResources.CreateNewTournament, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>           
            @Html.ActionLink(item.Name, "Details", new { id=item.Id })   
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Season)
        </td>
        <td>
            @Html.ActionLink(VolleyManagement.Mvc.Views.ViewResources.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(VolleyManagement.Mvc.Views.ViewResources.Delete, "Delete", new { id=item.Id })  
        </td>
    </tr>
}

</table>
