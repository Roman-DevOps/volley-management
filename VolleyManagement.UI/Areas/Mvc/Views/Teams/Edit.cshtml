@model VolleyManagement.UI.Areas.Mvc.ViewModels.Teams.TeamViewModel

@using System.Web.Optimization

@{
    ViewBag.Title = Resources.TeamViews.EditTeamTitle;
}

<h2>@ViewBag.Title</h2>
<style>
    .info input {
        padding: 0;
        border: 0;
        margin: 0;
    }

    .form {
        width: 540px;
        background: #FFF;
        padding: 38px 0px;
        margin: 0 auto;
        text-align: center;
        -webkit-box-shadow: 0px 3px 3px 0px rgba(0,0,0,0.15);
        -moz-box-shadow: 0px 3px 3px 0px rgba(0,0,0,0.15);
        box-shadow: 0px 3px 3px 0px rgba(0,0,0,0.15);
    }

    .info input {
        display: inline-block;
        vertical-align: top;
        margin-right: 20px;
        width: 100px;
        height: 94px;
        background: #efefef;
        font-size: 12px;
        color: #aeaeae;
    }

    #uploadButton {
     height: 200px;
     width: 200px;
}

</style>
<div class="width">
    <div class="form radius front cab-form">
        <div class="info float-left">
            @using (Html.BeginForm("AddPhoto", "Teams", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
            {
                <input name="form_name" type="hidden" value="photo_upload">
                <input name="fileToUpload" id="fileToUpload" type="file">
                <input name="button" id="uploadButton" style='background-image: url("/Content/Photo/Teams/0.jpg"); background-size: cover; padding-top: 70px;' type="button" value="Upload photo">
                <input name="submit" id="uploadSubmit" type="submit" value="Submit Query">
            }
        </div>
    </div>
</div>

<script type="text/javascript">
            $('#fileToUpload').hide();
            $('#uploadSubmit').hide();
            $('#uploadButton').on('click', function () {
                $('#fileToUpload').click();
            });
            $('#fileToUpload').change(function () {
                $('#uploadSubmit').click();
            });
</script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.TeamViews.TeamLegend</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateEdit", Model)

        <p>
            <button id="saveTeamButton">@Resources.TeamViews.Save</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.TeamViews.BackToList, "Index")
</div>

