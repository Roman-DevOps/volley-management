@model VolleyManagement.UI.Areas.Mvc.ViewModels.Teams.TeamViewModel

@using System.Web.Optimization

@{
    ViewBag.Title = Resources.TeamViews.EditTeamTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.TeamViews.TeamLegend</legend>

        @Html.HiddenFor(model => model.Id)
        @Html.Partial("_CreateEdit", Model)

        <p>
            <button id="saveTeamButton">@Resources.TeamViews.Save</button>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(Resources.TeamViews.BackToList, "Index")
</div>

