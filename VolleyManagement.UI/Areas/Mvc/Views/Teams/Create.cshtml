@using System.Web.Optimization
@model VolleyManagement.UI.Areas.Mvc.ViewModels.Teams.TeamViewModel

@{
    ViewBag.Title = Resources.TeamViews.CreateTeamTitle;
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Resources.TeamViews.TeamLegend</legend>

        @Html.Partial("_CreateEdit", Model)

        <p>
            <button id="createTeamButton">@Resources.TeamViews.Create</button>
        </p>
    </fieldset>

    <div>
        @Html.ActionLink(Resources.TeamViews.BackToList, "Index")
    </div>
}
