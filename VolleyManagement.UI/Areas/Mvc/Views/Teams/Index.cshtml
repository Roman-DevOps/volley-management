@using System.Web.Optimization
@using VolleyManagement.UI.Areas.Mvc.ViewModels.Teams;
@model IEnumerable<TeamViewModel>

@{
    ViewBag.Title = "Teams";
}


<h2>List of teams</h2>

<p>
    @Html.ActionLink(Resources.TeamViews.Create, "Create")
</p>

<div vm_scope='team_list'>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr vm_teamId='@item.Id' vm_teamName='@item.Name'>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <button class='deleteTeamButton' >@Resources.TeamViews.Delete</button>
            </td>
        </tr>
    }

</table>
</div>

@Scripts.Render("~/bundles/teamlistscripts")
@Html.Hidden("DeleteConfirmationMessage", Resources.TeamViews.DeleteConfirmationMessage)