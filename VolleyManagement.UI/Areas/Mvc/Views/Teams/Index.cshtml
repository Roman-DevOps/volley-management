@using System.Web.Optimization
@using VolleyManagement.Domain.RolesAggregate;
@using VolleyManagement.UI.Areas.Mvc.ViewModels.Teams;
@model TeamCollectionViewModel

@{
    ViewBag.Title = "Teams";
}

@{
    int AUTH_OPERATION_CREATE_INDEX = 0;
    int AUTH_OPERATION_DELETE_INDEX = 1;
    int AUTH_OPERATION_EDIT_INDEX = 2;
}
<h2>List of teams</h2>
@if (Model.Authorization[AUTH_OPERATION_CREATE_INDEX].IsAllowed(AuthOperations.Teams.Create))
{
    <p>
    @Html.ActionLink(Resources.TeamViews.Create, "Create")
    </p>
}

<div vm_scope='team_list'>
<table class="table">
    <tr>
        <th>
            @Resources.TeamViews.TeamName
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Teams)
    {
        <tr vm_teamId='@item.Id' vm_teamName='@item.Name'>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (Model.Authorization[AUTH_OPERATION_DELETE_INDEX].IsAllowed(AuthOperations.Teams.Delete))
                { 
                    <button class='deleteTeamButton'>@Resources.TeamViews.Delete</button>
                }
                @if (Model.Authorization[AUTH_OPERATION_EDIT_INDEX].IsAllowed(AuthOperations.Teams.Edit))
                {
                    @Html.ActionLink(@Resources.TeamViews.Details, "Details", new { id = item.Id })
                }
            </td>
        </tr>
    }

</table>
</div>

@Scripts.Render("~/bundles/teamlistscripts")
@Html.Hidden("DeleteConfirmationMessage", Resources.TeamViews.DeleteConfirmationMessage)