@using VolleyManagement.UI.Areas.Mvc.ViewModels.Teams;
@model IEnumerable<TeamViewModel>

@{
    ViewBag.Title = "Teams";
}


<h2>List of teams</h2>

<p>
    @Html.ActionLink(Resources.TeamViews.Create, "Create")
</p>

<script src="~/Scripts/TeamOperationScripts.js" type="text/javascript"></script>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string rowId = "team" + item.Id;
        <tr id=@rowId>
            <td id="TeamName ">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <input type="button" value="@Resources.TeamViews.Delete" onclick="deleteTeam(@item.Id, '@item.Name')" />
            </td>
        </tr>
    }

</table>

@Html.Hidden("DeleteConfirmationMessage", Resources.TeamViews.DeleteConfirmationMessage)