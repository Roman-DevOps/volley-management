@model IEnumerable<VolleyManagement.UI.Areas.Mvc.ViewModels.GameResults.GameResultViewModel>

@{
    ViewBag.Title = "TournamentResults";
}

<h2>Tournament results</h2>
<hr />
@foreach (VolleyManagement.UI.Areas.Mvc.ViewModels.GameResults.GameResultViewModel gameResult in Model) {
    <div>
        @gameResult.HomeTeamName vs @gameResult.AwayTeamName || @gameResult.SetsScore.Home : @gameResult.SetsScore.Away
        @if (gameResult.IsTechnicalDefeat)
        {
            <span class="color_red">Technical defeat</span>
        }

        @Html.ActionLink("Details", "Details", new { id = gameResult.Id.ToString() }, null) | 
        @Html.ActionLink("Edit", "Edit", new { id = gameResult.Id.ToString() }, null) | 
        @Html.ActionLink("Delete", "Delete", new { id = gameResult.Id.ToString() }, null)
    </div>    
}

