@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Volley Management - @ViewBag.Title</title>

    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/bootstrapscripts")
	@Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryvalidation")
    @Scripts.Render("~/bundles/useractionscripts")
    @Scripts.Render("~/bundles/vmscripts")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Volley Management", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-right navbar-text">
                @Html.ActionLink("Feedback", "Create", "Feedbacks", null, new { @class = "feedback-link" })
            </div>
            <div class="navbar-right navbar-text">
                @{ Html.RenderAction("Info", "Account"); }
            </div>
        </div>
    </div>
    <div id="menu">
        @RenderSection("Navigation", required: false)
    </div>
    <div id="content">
        @RenderBody()
    </div>

    
</body>
</html>
