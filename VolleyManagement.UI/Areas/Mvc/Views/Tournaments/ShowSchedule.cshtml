@model VolleyManagement.UI.Areas.Mvc.ViewModels.Tournaments.ScheduleViewModel
@using VolleyManagement.Domain.TournamentsAggregate;
@using VolleyManagement.UI.Areas.Mvc.ViewModels.Tournaments;
@using VolleyManagement.Domain.RolesAggregate;

@{
    ViewBag.Title = "Schedule";
}

@if (Model == null)
{
    @Html.ValidationMessage("LoadError")
}
else
{
    if (Model.TournamentScheme == TournamentSchemeEnum.PlayOff)
    {
        @Html.Partial("_PlayoffSchedule", Model)
    }
    else
    {
        @Html.Partial("_NonPlayoffSchedule", Model)
    }
}
