@using VolleyManagement.UI.Areas.Mvc.ViewModels.Tournaments;
@using VolleyManagement.Domain.RolesAggregate;
@model TournamentsCollectionsViewModel

@{
    ViewBag.Title = Resources.TournamentViews.TournamentsIndexTitle;
}

<h2>@ViewBag.Title</h2>

@if (Model.OperationAccessVerifier.IsAllowed(AuthOperations.Tournaments.Create))
{
    <p>
        @Html.ActionLink(Resources.TournamentViews.CreateNewTournament, "Create")
    </p>
}
<p>
    <h3>
        @Resources.TournamentViews.CurrentTournamentsHeader
    </h3>    
    @{Html.RenderPartial("TournamentsList", Model.CurrentTournaments);}
</p>
<p>
    <h3>
        @Resources.TournamentViews.UpcomingTournamentsHeader
    </h3>
    @{Html.RenderPartial("TournamentsList", Model.UpcomingTournaments);}
</p>
<p>
    @Html.ActionLink(Resources.TournamentViews.FinishedTournaments, string.Empty, null, 
        new { @class = "showFinishedTournamenst"})
</p>

@{ ViewBag.TableId = "id=finished_table"; }
<p>
    <h3 id="FinishedHeader">
        @Resources.TournamentViews.FinishedTournamentsHeader
    </h3>

    @{Html.RenderPartial("TournamentsList", new List<VolleyManagement.Domain.TournamentsAggregate.Tournament>());}
</p>
