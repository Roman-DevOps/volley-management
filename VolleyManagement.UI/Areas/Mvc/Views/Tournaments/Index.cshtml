@using VolleyManagement.UI.Areas.Mvc;
@model IEnumerable<VolleyManagement.Domain.Tournaments.Tournament>

@{
    ViewBag.Title = Resources.TournamentViews.TournamentsIndexTitle;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Resources.TournamentViews.CreateNewTournament, "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>           
            @Html.ActionLink(item.Name, "Details", new { id=item.Id })   
        </td>
        <td>
            @Html.DisplaySeason(item.Season)
        </td>
        <td>
            @Html.ActionLink(Resources.TournamentViews.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(Resources.TournamentViews.Delete, "Delete", new { id=item.Id })  
        </td>
    </tr>
}
</table>