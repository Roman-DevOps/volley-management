@using VolleyManagement.UI.Areas.Mvc
@model IEnumerable<VolleyManagement.Domain.Tournaments.Tournament>

<h3>
    @ViewBag.Header
</h3>

<table class="table-bordered">
    <thead>
        <tr>
            <td width="400">
                @Html.DisplayNameFor(model => model.Name)
            </td>
            <td width="100">
                @Html.DisplayNameFor(model => model.Season)
            </td>
            <td width="100">
                @Html.DisplayNameFor(model => model.Scheme)
            </td>
            <td width="100">
                @Html.DisplayNameFor(model => model.StartDate)
            </td>
            <td width="100">
                @Html.DisplayNameFor(model => model.EndDate)
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var tournament in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(tournament.Name, "Details", new { id = tournament.Id })
                </td>
                <td>
                    @Html.DisplaySeason(tournament.Season)
                </td>
                <td>
                    @tournament.Scheme
                </td>
                <td>
                    @tournament.StartDate.ToShortDateString()
                </td>
                <td>
                    @tournament.EndDate.ToShortDateString()
                </td>
            </tr>
        }
    </tbody>
</table>