@model VolleyManagement.UI.Areas.Mvc.ViewModels.Players.ListOfPlayers

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.list.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.list.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.list.BirthYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.list.Height)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.list.Weight)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.list) {
    <tr>
        <td>
            @Html.ActionLink(item.FirstName, "Details", new { id = item.Id }) 
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Height)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Weight)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@if (Model.NumberOfPages <= 5)
{
    for(int i = 0; i < Model.NumberOfPages; i++)
    {
        if(i == Model.Index)
        {
            <b>i</b>
        }
        else
        {
            Html.RouteLink("i", "WorkPlease", new { id = (i) });
        }
        
    }
}

@if(Model.Index != 0)
{
    Html.RouteLink("1", "WorkPlease", new { id = (0) });
}

@if (Model.Index - 1 > 0)
{
    if (Model.Index - 1 > 1)
    {
        <b>...</b>
    }
    Html.RouteLink("Model.Index - 1", "WorkPlease", new { id = (Model.Index - 1) });
}

@Model.Index

@if (Model.Index + 1 < Model.NumberOfPages - 1)
{
    Html.RouteLink("Model.Index + 1", "WorkPlease", new { id = (Model.Index + 1) });
    if (Model.Index + 1 < Model.NumberOfPages - 2)
    {
        <b>...</b>
    }
}

@if (Model.Index != Model.NumberOfPages - 1)
{
    Html.RouteLink("Model.NumberOfPages", "WorkPlease", new { id = (Model.NumberOfPages) });
}
