@model VolleyManagement.UI.Areas.Mvc.ViewModels.Players.PlayersListViewModel

@{
    ViewBag.Title = Resources.PlayerViews.PlayersIndexTitle;
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink(Resources.PlayerViews.CreateNewPlayer, "Create")
</p>

<script src="~/Scripts/UserActions.js" type="text/javascript"></script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.List.FirstOrDefault().FullName)
        </th>
        <th>
        </th>
    </tr>
    
    @foreach (var item in Model.List)
    {
        <tr>
            <td>
                @Html.ActionLink(item.FullName, "Details", new { id = item.Id },
                new { @class = "playerName", @id = item.Id + "playerName"})
            </td>
            <td>
                @Html.ActionLink(Resources.PlayerViews.Edit, "Edit", new { id = item.Id }) |
                @Html.ActionLink(Resources.PlayerViews.Delete, "Delete", new { id = item.Id },
                 new { @class = "delete", @id = item.Id })
            </td>
        </tr>
    }

</table>
@{
    int firstPage = 1;
    int secondPage = 2;
    int pageBefore = Model.PageNumber - 1;
    int pageAfter = Model.PageNumber + 1;
}

@if (Model.PageNumber != firstPage)
{
    @Html.ActionLink(firstPage.ToString(), "Index", new { page = (firstPage) });
}

@if (pageBefore > firstPage)
{
    if (pageBefore > secondPage)
    {
        <b>...</b>
    }
    @Html.ActionLink(pageBefore.ToString(), "Index", new { page = (pageBefore) });
}

@Model.PageNumber

@if (pageAfter < Model.NumberOfPages)
{
    @Html.ActionLink(pageAfter.ToString(), "Index", new { page = (pageAfter) });
    if (pageAfter < Model.NumberOfPages - 1)
    {
        <b>...</b>
    }
}

@if (Model.PageNumber != Model.NumberOfPages)
{
    @Html.ActionLink(Model.NumberOfPages.ToString(), "Index", new { page = (Model.NumberOfPages) })
}

@Html.Hidden("DeleteConfirmationMessage", Resources.PlayerViews.DeleteConfirmationMessage)